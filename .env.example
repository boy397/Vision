# ── Vision Assistive System — Environment Variables ──
# Copy this to .env and fill in your API keys

# Google Gemini (required for LLM provider: google)
GOOGLE_API_KEY=

# Azure OpenAI (required for LLM provider: azure)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# ElevenLabs (required for TTS provider: elevenlabs)
ELEVENLABS_API_KEY=

# Sarvam AI (required for STT/TTS provider: sarvam)
SARVAM_API_KEY=

# Google Cloud Speech (required for STT provider: google)
# Set GOOGLE_APPLICATION_CREDENTIALS to path of service account JSON
GOOGLE_APPLICATION_CREDENTIALS=

# Optional: Override config file path
# VISION_CONFIG_PATH=/path/to/custom/config.yml
